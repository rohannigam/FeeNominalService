{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=feenominal;Username=svc_feenominal_api;Password=api_default_password"
  },
  "Database": {
    "Schema": "fee_nominal"
  },
  "ApiKeySettings": {
    "DefaultRateLimit": 1000,
    "DefaultExpirationDays": 30,
    "MaxActiveKeysPerMerchant": 5,
    "MinDescriptionLength": 10,
    "MaxDescriptionLength": 255
  },
  "ApiKeyConfiguration": {
    "SecretName": "FeeNominalService/ApiKeys",
    "Region": "us-east-1",
    "VpcEndpointId": "vpce-1234567890abcdef0",
    "MaxFailedAttempts": 5,
    "LockoutDurationMinutes": 30,
    "KeyRotationDays": 90,
    "EnableRateLimiting": true,
    "DefaultRateLimit": 1000,
    "RequestTimeWindowMinutes": 5
  },
  "SurchargeProviderValidation": {
    "MaxSchemaNameLength": 100,
    "MaxSchemaDescriptionLength": 500,
    "MaxFieldNameLength": 100,
    "MaxFieldDescriptionLength": 500,
    "MaxCredentialValueLength": 10000,
    "MaxCredentialsObjectSize": 50000,
    "MaxSchemaObjectSize": 10000,
    "MaxRequiredFields": 20,
    "MaxOptionalFields": 10,
    "MaxProvidersPerMerchant": 25,
    "ValidateJwtFormat": true,
    "ValidateApiKeyFormat": true,
    "ValidateEmailFormat": true,
    "ValidateUrlFormat": true,
    "MinCredentialValueLength": 1,
    "MaxConfigNameLength": 100,
    "MaxTimeoutSeconds": 300,
    "MaxRetryCount": 10,
    "MaxRetryDelaySeconds": 60,
    "MaxRateLimit": 10000,
    "MaxRateLimitPeriodSeconds": 3600,
    "ValidateExtraFields": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "E:\\logs\\FeeNominalService-log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}{NewLine}Request: {Request}{NewLine}Response: {Response}{NewLine}Headers: {Headers}{NewLine}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "FeeNominalService"
    }
  },
  "AWS": {
    "Region": "us-east-1",
    "Profile": "default",
    "SecretsManager": {
      "MerchantSecretNameFormat": "feenominal/merchants/{merchantId}/apikeys/{apiKey}",
      "AdminSecretNameFormat": "feenominal/admin/apikeys/{serviceName}-admin-api-key-secret"
    }
  },
  "BulkSaleSettings": {
    "UseProviderBulkSale": true,
    "MaxRequestsPerBulkSale": 5000,
    "MaxConcurrency": 10
  },

  "AuditLogging": {
    "Enabled": false,
    "Endpoints": {
      "SurchargeProvider": true,
      "MerchantAuditTrail": true
    }
  }
}
